---
import Section from "./Section.astro";
---

<Section
    title="Model Y"
    subtitle="Concertar una prueba de conduccion"
    color="black"
>
    <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
            class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:bg-gray-500 hover:text-white hover:border-gray-500"
            href="#"
        >
            Explorar Inventario
        </a>

        <a
            class="border-[3px] border-white-500 bg-white text-sm rounded font-medium text-black px-12 py-2 inline-flex hover:bg-black hover:text-white hover:border-black transition-colors justify-center items-center"
            href="#"
        >
            Pedido Personalizado
        </a>
    </div>
    <img
        slot="background"
        src="/model-y.avif"
        alt="Model-y"
        class="h-full w-full object-center object-cover"
    />
</Section>
